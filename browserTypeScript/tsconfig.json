{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ES2020", "DOM"],
    
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}