{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "maxNodeModuleJsDepth": 0,
    "moduleResolution": "Node",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}